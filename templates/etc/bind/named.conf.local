//
// Configs setup by Drumee infra-setup utility
//

include "/etc/bind/named.conf.log";
include "<%= nsupdate_key %>";
zone "<%= domain %>" {
    type master;
    file "/var/lib/bind/<%= domain %>";
    allow-query { any; };
    allow-update { key "update"; };
    allow-transfer { <%= public_ip4 %>; };
};
